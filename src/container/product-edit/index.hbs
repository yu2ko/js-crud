<main>
  <section>
    <div class='form'>
      <h1 class='form__title'>Редагування товару</h1>

      <div class='form__card'>
        <p class='form__info'>Інформація про товар</p>

        {{#with data.product}}
          <form
            method='POST'
            action='/product-edit?id={{id}}'
          >

            <div class='form__content'>
              <div class='form__item'>
                <div class='form__field'>
                  <label
                    for='text'
                    class='form__label'
                  >Назва товару
                  </label>
                  <input
                    type='text'
                    name='name'
                    class='form__input'
                    value='{{name}}'
                  />
                </div>
                <div class='form__field'>
                  <label
                    for='number'
                    class='form__label'
                  >Ціна
                  </label>
                  <input
                    type='price'
                    name='price'
                    class='form__input'
                    value='{{price}}'
                  />
                </div>

                <div class='form__field'>
                  <label for='id' class='form__label'>ID
                  </label>
                  <input
                    type='text'
                    name='id'
                    class='form__input'
                    value='{{id}}'
                    disabled
                  />
                </div>
              </div>

              <div class='form__field'>
                <label
                  for='description'
                  class='form__label'
                >Короткий опис товару
                </label>
                <input
                  type='text'
                  name='description'
                  class='form__input'
                  value='{{description}}'
                />
                <span class='form__span'>Відображується у
                  картці товару</span>
              </div>

              <div class='form__button-container'>
                <button class='form__button'>Зберегти
                  оновлення</button>

                <a
                  href='/product-delete?id={{id}}'
                  class='form__button form__button-link'
                >Видалити товар</a>

              </div>
            </div>

          </form>
        {{/with}}
      </div>

    </div>

  </section>
</main>